<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="25dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="25dp"
    tools:context="com.example.veggkart.Contact_Us_Activity">


    <com.example.veggkart.ModifiedTextView
        android:id="@+id/contact_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"


        android:text="Contact Information"
        android:textColor="#009688"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.example.veggkart.ModifiedTextView
        android:id="@+id/phone_no"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:text="Phone Number"
        android:textColor="#FF9800"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <com.example.veggkart.ModifiedTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:textColor="#000000"
        android:text="+91-123-456-7890"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.example.veggkart.ModifiedTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"

        android:text="+91-123-456-7890"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.example.veggkart.ModifiedTextView
        android:id="@+id/Email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:text="Email"
        android:textColor="#FF9800"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <com.example.veggkart.ModifiedTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"

        android:text="veggkart@something.com   "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.example.veggkart.ModifiedTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Office Address"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF9800"
        android:textStyle="bold" />

    <com.example.veggkart.ModifiedTextView
        android:layout_width="fill_parent"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:text="Sagartal square"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.example.veggkart.ModifiedTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"


        android:text="Gwalior, Madhya Pradesh "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <com.example.veggkart.ModifiedTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"

        android:text="474001"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</LinearLayout>